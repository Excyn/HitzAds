<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">



    <LinearLayout
        android:id="@+id/fullscreen_image_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fullscreen_image"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/logo"/>


            <TextView
                android:id="@+id/fullscreen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the ad Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />

            <TextView
                android:id="@+id/fullscreen_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the ad body description with multiple lines. This is a normal banner ad"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        <Button
            android:id="@+id/fullscreen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Download Now"
            android:background="#009688"
            android:textColor="#ffffff"
            android:layout_marginTop="35dp"/>






    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fullscreen_video_ad"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

       <VideoView
           android:id="@+id/fullscreen_video"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/fullscreen_video_body"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="50dp"
            android:background="#80F6F6F6"
            android:gravity="center">

            <TextView
                android:id="@+id/fullscreen_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the ad Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />

            <TextView
                android:id="@+id/fullscreen_video_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the ad body description with multiple lines. This is a normal banner ad"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/fullscreen_video_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Download Now"
                android:background="#009688"
                android:textColor="#ffffff"
                android:layout_marginTop="35dp"/>

        </LinearLayout>

    </RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Ad"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:background="#FFC107" />

    <Button
        android:id="@+id/fullscreen_close"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:text="X"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="#5A628E"
        android:background="#232845" />

</RelativeLayout>